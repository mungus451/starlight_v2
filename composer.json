{
    "name": "starlight/dominion",
    "description": "A browser-based space strategy game, MVC rewrite.",
    "type": "project",
    "require": {
        "php": "^8.4",
        "vlucas/phpdotenv": "^5.6",
        "nikic/fast-route": "^1.3",
        "php-di/php-di": "^7.1",
        "robmorgan/phinx": "^0.16.10",
        "predis/predis": "^3.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5",
        "mockery/mockery": "^1.6"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "scripts": {
        "phinx": "vendor/bin/phinx --configuration=config/phinx.php"
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    }
}