# Application Environment
APP_ENV=development

# Database Configuration
# For Docker: use DB_HOST=db
# For local development: use DB_HOST=127.0.0.1 and DB_PORT=3307 (if exposing Docker DB)
DB_HOST=db
DB_PORT=3306
DB_DATABASE=starlightDB
DB_USERNAME=sd_admin
DB_PASSWORD=starlight
DB_CHARSET=utf8mb4

# MySQL Container Configuration (used by docker-compose.yml)
# These should be changed for production deployments
MYSQL_ROOT_PASSWORD=rootpass
MYSQL_DATABASE=starlightDB
MYSQL_USER=sd_admin
MYSQL_PASSWORD=starlight

# Testing Database (optional)
# DB_DATABASE_TEST=starlightDB_test
